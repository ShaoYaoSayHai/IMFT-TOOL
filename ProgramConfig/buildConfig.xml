        <SwitchOpenTime>1000</SwitchOpenTime>
        <SwitchCloseTime>1000</SwitchCloseTime>
        <SwitchResetTime>500</SwitchResetTime>
    </DeviceSwitchConfig>
    <ReadPressureTimeConfig>
        <ReadAirPressureTime>1500</ReadAirPressureTime>
        <ReadFaqianPressureTime>1500</ReadFaqianPressureTime>
        <ReadFahouPressureTime>1500</ReadFahouPressureTime>
        <ReadLowPressureTimeout>3000</ReadLowPressureTimeout>
        <ReadOverPressureTimeout>3000</ReadOverPressureTimeout>
    </ReadPressureTimeConfig>
